{
  "openapi": "3.0.0",
  "info": { "title": "Union Validation API", "version": "1.0.0" },
  "servers": [ { "url": "http://localhost:4556" } ],
  "paths": {
    "/union-any": {
      "post": {
        "operationId": "testUnionAny",
        "summary": "anyOf body schema",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "anyOf": [
                  { "type": "object", "properties": { "a": { "type": "string" } }, "required": ["a"] },
                  { "type": "object", "properties": { "b": { "type": "number" } }, "required": ["b"] }
                ]
              }
            }
          }
        },
        "responses": { "200": { "description": "ok" } }
      }
    },
    "/union-one": {
      "post": {
        "operationId": "testUnionOne",
        "summary": "oneOf body schema",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  { "type": "object", "properties": { "x": { "type": "boolean" } }, "required": ["x"] },
                  { "type": "object", "properties": { "y": { "type": "integer" } }, "required": ["y"] }
                ]
              }
            }
          }
        },
        "responses": { "200": { "description": "ok" } }
      }
    }
    ,
    "/union-nested": {
      "post": {
        "operationId": "testUnionNested",
        "summary": "nested anyOf/oneOf body schema",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "inner": { "oneOf": [ { "type": "string" }, { "type": "number" } ] }
                    },
                    "required": ["inner"]
                  },
                  {
                    "type": "object",
                    "properties": { "flag": { "type": "boolean" } },
                    "required": ["flag"]
                  }
                ]
              }
            }
          }
        },
        "responses": { "200": { "description": "ok" } }
      }
    },
    "/union-array": {
      "post": {
        "operationId": "testUnionArray",
        "summary": "array of union items",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": { "oneOf": [ { "type": "string" }, { "type": "number" } ] }
              }
            }
          }
        },
        "responses": { "200": { "description": "ok" } }
      }
    }
  }
}
